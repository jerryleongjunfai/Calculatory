<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2C2C"
    tools:context=".MainActivity">

    <TextView
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:id="@+id/textview1"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:background="@drawable/textfield"
        android:textSize="40sp"
        android:textColor="#FFFFFF">
    </TextView>

    <TextView
        android:layout_width="360dp"
        android:layout_height="105dp"
        android:id="@+id/textview2"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:background="@drawable/textfield"
        android:textSize="40sp"
        android:layout_below="@+id/textview1"
        android:textColor="#FFFFFF">
    </TextView>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="AC"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/textview2"
        android:id="@+id/buttonClear">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="⌫ "
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:textColor="@color/white"
        android:layout_below="@+id/textview2"
        android:id="@+id/buttonBackspace">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="%"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:textColor="@color/white"
        android:layout_below="@+id/textview2"
        android:id="@+id/buttonPercent">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="÷"
        android:paddingLeft="2dp"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonPercent"
        android:textColor="@color/white"
        android:layout_below="@+id/textview2"
        android:id="@+id/buttonDivide">
    </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="9"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/buttonClear"
        android:id="@+id/button9">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="8"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:textColor="@color/white"
        android:layout_below="@+id/buttonBackspace"
        android:id="@+id/button8">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="7"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:textColor="@color/white"
        android:layout_below="@+id/buttonPercent"
        android:id="@+id/button7">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="×"
        android:paddingLeft="2dp"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonPercent"
        android:textColor="@color/white"
        android:layout_below="@+id/buttonDivide"
        android:id="@+id/buttonMultiply">
    </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="6"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/button9"
        android:id="@+id/button6">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="5"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:textColor="@color/white"
        android:layout_below="@+id/button8"
        android:id="@+id/button5">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="4"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:textColor="@color/white"
        android:layout_below="@+id/button7"
        android:id="@+id/button4">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="-"
        android:paddingLeft="2dp"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonPercent"
        android:textColor="@color/white"
        android:layout_below="@+id/buttonMultiply"
        android:id="@+id/buttonSubtract">
    </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="3"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/button6"
        android:id="@+id/button3">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="2"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:textColor="@color/white"
        android:layout_below="@+id/button5"
        android:id="@+id/button2">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="1"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:textColor="@color/white"
        android:layout_below="@+id/button4"
        android:id="@+id/button1">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="+"
        android:paddingLeft="2dp"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonPercent"
        android:textColor="@color/white"
        android:layout_below="@+id/buttonSubtract"
        android:id="@+id/buttonAdd">
    </Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="0"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_below="@+id/button3"
        android:id="@+id/button0">
    </Button>
    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="."
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonClear"
        android:textColor="@color/white"
        android:layout_below="@+id/button2"
        android:id="@+id/buttonDot">
    </Button>
    <Button
        android:layout_width="176dp"
        android:layout_height="88dp"
        android:text="="
        android:textStyle="bold"
        android:textSize="25sp"
        android:layout_toRightOf="@+id/buttonBackspace"
        android:textColor="@color/white"
        android:layout_below="@+id/button1"
        android:id="@+id/buttonEqual">
    </Button>

</RelativeLayout>